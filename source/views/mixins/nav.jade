mixin nav(items)
  ul
    each item, key in items
      - var active = ''
      - var havesub = ''
      - if (key === menuIndex) active = 'active'
      - if (typeof(item.itemsMenu) !== 'undefined') havesub = ' have-sub'
      li(class=active + havesub)
        +link(item.title, item.href, item.text)(class=item.class)
        - if (typeof(item.itemsMenu) !== 'undefined'){
          .sub-nav
            .expand-icon +
            +nav(item.itemsMenu)
        - }
